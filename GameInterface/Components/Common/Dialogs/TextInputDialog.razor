<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText>@ContentText</MudText>
            </MudItem>
            <MudItem xs="12">
                <MudTextField Class="pa-2" @bind-Value="_string" Immediate="true" Label="@Label" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Créer</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string ContentText { get; set; } = string.Empty;

    [Parameter]
    public string Label { get; set; } = string.Empty;

    private string? _string;

    private void Submit() => MudDialog?.Close(DialogResult.Ok(_string));

    private void Cancel() => MudDialog?.Cancel();
}