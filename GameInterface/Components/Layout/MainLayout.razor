@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @MainLayoutTitleMenu
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Color="Color.Dark">
        <NavMenu TitleMenu="@TitleMenu"/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;
    private string TitleMenu { get; set; } = "My Games";
    private string MainLayoutTitleMenu => _drawerOpen ? "" : TitleMenu;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}